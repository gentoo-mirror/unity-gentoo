ebuild_hook() {
	## Add Human icon theme.
	mv "${WORKDIR}"/human icon-themes

	## Add custom icons.
	cp "${EHOOK_FILESDIR}"/custom-icons/savemodified_{large,small}.png icon-themes/human/res

	## Configure with Human theme.
	sed -i \
		-e "/with_theme=/{s/hicontrast/hicontrast human/}" \
		-e "/real_theme=/{s/hicontrast/hicontrast|human/}" \
		configure.ac

	## Make Human theme the default.
	sed -i \
		-e "/FALLBACK_ICON_THEME_ID/{s/tango/human/}" \
		vcl/source/app/IconThemeSelector.cxx
}
