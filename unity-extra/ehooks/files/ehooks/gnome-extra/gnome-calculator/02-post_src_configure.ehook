## Replace 'true' with real valac version
ebuild_hook() {
	ebegin "Checking for package dev-lang/vala"
		local valaver=$(qatom -q $(best_version dev-lang/vala) | cut -d ' ' -f 3)
		[[ -z ${valaver} ]] && die "dev-lang/vala: package not installed" 2>&1
	eend

	find -name Makefile -type f -exec \
		sed -i \
			-e "\:VALAC:{s:$(type -P true):$(type -p valac-${valaver%.*}):}" \
			{} \;
}
