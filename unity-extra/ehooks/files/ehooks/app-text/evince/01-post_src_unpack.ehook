ebuild_hook() {
	unpack "${EHOOK_FILESDIR}"/languages-global-menu-artful.tar.xz

	echo " * Merging available languages..."

	local po_ext po_orig msgid
	local -a po_files=( po/* )

	for po_ext in "${po_files[@]}"; do
	        po_orig=${po_ext/po/${P%%_*}\/po}

		if [[ -f ${po_orig} ]]; then
			sed -i -e '/msgid \"\"/,/^$/d' "${po_ext}"
			cat "${po_ext}" >> "${po_orig}"
			msguniq --use-first -o "${po_orig}" "${po_orig}"
			msgfmt -o "${po_orig/.po/.gmo}" "${po_orig}"
		fi
	done
}
