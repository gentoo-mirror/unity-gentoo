ebuild_hook() {
	# fix Desktop Action TempProfile
	local fixlib=$(get_libdir)
	sed -e "s:/usr/lib/:/usr/${fixlib}/:g" "${EHOOK_FILESDIR}/chromium-launcher-r3-with-temp.sh" > chromium-launcher.sh || die
	exeinto "/usr/${fixlib}/chromium-browser"
	doexe chromium-launcher.sh

	domenu "${EHOOK_FILESDIR}/chromium-browser-chromium.desktop"
}
