From 5e859d4975e26f47811ec20961d70c33dff79991 Mon Sep 17 00:00:00 2001
From: c4pp4
Date: Tue, 12 Nov 2019 13:04:52 +0100
Subject: [PATCH 1/1] Use unity-control-center as the fallback

Try to use unity-control-center as the fallback when gnome-control-center
is not available.

Signed-off-by: c4pp4
---
 src/gcal-source-dialog.c | 59 +++++++++++++++++++++++++++++++++++++++-
 1 file changed, 58 insertions(+), 1 deletion(-)

diff --git a/src/gcal-source-dialog.c b/src/gcal-source-dialog.c
index b1aa1d9..6d74fe5 100644
--- a/src/gcal-source-dialog.c
+++ b/src/gcal-source-dialog.c
@@ -691,6 +691,54 @@ build_dbus_parameters (const gchar *action,
   return g_variant_new_tuple (params2, 3);
 }
 
+static gboolean
+in_desktop (const gchar *name)
+{
+	const gchar *desktop_name_list;
+	gchar **names;
+	gboolean in_list = FALSE;
+	gint i;
+
+	desktop_name_list = g_getenv ("XDG_CURRENT_DESKTOP");
+	if (!desktop_name_list)
+		return FALSE;
+
+	names = g_strsplit (desktop_name_list, ":", -1);
+	for (i = 0; names[i] && !in_list; i++)
+		if (strcmp (names[i], name) == 0) {
+			in_list = TRUE;
+			break;
+		}
+	g_strfreev (names);
+
+	return in_list;
+}
+
+static void
+spawn_uoa (const gchar *action,
+           const gchar *arg)
+{
+  const gchar *cc_uoa = "unity-control-center online-accounts";
+  gchar *command;
+  GError *error = NULL;
+
+  if (!action && !arg)
+    command = g_strconcat (cc_uoa, NULL);
+  else if (action && !arg)
+    command = g_strconcat (cc_uoa, " ", action, NULL);
+  else if (action && arg)
+    command = g_strconcat (cc_uoa, " ", action, " ", arg, NULL);
+
+  g_spawn_command_line_async (command, &error);
+  g_free(command);
+
+  if (error != NULL)
+  {
+    g_warning ("Couldn't open Online Accounts panel: %s", error->message);
+    g_error_free (error);
+  }
+}
+
 static void
 spawn_goa_with_args (const gchar *action,
                      const gchar *arg)
@@ -712,7 +760,9 @@ spawn_goa_with_args (const gchar *action,
       return;
     }
 
-  g_dbus_proxy_call_sync (proxy,
+  GVariant *variant;
+
+  variant = g_dbus_proxy_call_sync (proxy,
                           "Activate",
                           build_dbus_parameters (action, arg),
                           G_DBUS_CALL_FLAGS_NONE,
@@ -720,6 +770,13 @@ spawn_goa_with_args (const gchar *action,
                           NULL,
                           NULL);
 
+  if (!variant && in_desktop("Unity"))
+    {
+      spawn_uoa (action, arg);
+    }
+
+  g_variant_unref (variant);
+
   g_clear_object (&proxy);
 }
 
