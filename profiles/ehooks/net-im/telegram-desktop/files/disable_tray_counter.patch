@@ -305,7 +305,7 @@ bool GenerateDesktopFile(
 				QRegularExpression(
 					qsl("^Exec=(.*) -- %u$"),
 					QRegularExpression::MultilineOption),
-				qsl("Exec=\\1")
+				qsl("Exec=env TDESKTOP_DISABLE_TRAY_COUNTER=1 \\1")
 					+ (args.isEmpty() ? QString() : ' ' + args));
 		}
 
